{
  "name": "@frontmeans/render-scheduler",
  "version": "1.8.1",
  "description": "Schedule DOM updates rendering",
  "keywords": [
    "performance",
    "requestAnimationFrame",
    "raf"
  ],
  "homepage": "https://github.com/frontmeans/render-scheduler",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:frontmeans/render-scheduler.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/frontmeans/render-scheduler/issues"
  },
  "type": "module",
  "main": "./dist/render-scheduler.js",
  "types": "./index.d.ts",
  "exports": "./dist/render-scheduler.js",
  "dependencies": {
    "@frontmeans/dom-primitives": "^1.1.0",
    "@proc7ts/context-values": "^7.0.1",
    "@proc7ts/supply": "^1.2.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@proc7ts/context-builder": "^7.0.1",
    "@run-z/eslint-config": "^3.3.0",
    "@run-z/rollup-helpers": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "gh-pages": "^4.0.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "jest-junit": "^14.0.1",
    "jest-mock": "^29.2.2",
    "prettier": "^2.7.1",
    "prettier-eslint-cli": "^7.1.0",
    "rollup": "^3.2.3",
    "rollup-plugin-flat-dts": "^1.8.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "run-z": "^1.10.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.19",
    "typescript": "^4.8.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "4.7"
      }
    }
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then rollup -c",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf \"index.d.ts?(.map)\" dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "format": "run-z +z --then prettier-eslint --write --include-dot-files \"src/**/*.*\" \"*.{js,cjs,json,md}\"",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
