{
  "name": "@proc7ts/render-scheduler",
  "version": "1.3.0",
  "description": "Schedule DOM updates rendering",
  "keywords": [
    "performance",
    "requestAnimationFrame",
    "raf"
  ],
  "homepage": "https://github.com/proc7ts/render-scheduler",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:proc7ts/render-scheduler.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "main": "dist/render-scheduler.js",
  "module": "dist/render-scheduler.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/render-scheduler.mjs",
      "require": "./dist/render-scheduler.js"
    }
  },
  "devDependencies": {
    "@proc7ts/eslint-config": "^2.0.4",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "codecov": "^3.7.2",
    "eslint": "^7.7.0",
    "eslint-plugin-jest": "^23.20.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "rollup": "^2.26.6",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "run-z": "^1.0.0-dev.9",
    "shx": "^0.3.2",
    "ts-jest": "^26.3.0",
    "tslib": "^2.0.1",
    "typedoc": "^0.18.0",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then rollup --config ./rollup.config.js",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf d.ts dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint . --ext .js,.ts",
    "test": "run-z +z --then jest",
    "z": "run-z +build,+doc,+lint,+test"
  }
}
